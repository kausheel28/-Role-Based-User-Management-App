# Production Environment Configuration
# AI-assisted: see ai-assist.md

# Environment
ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/user_management_prod

# JWT Settings - CHANGE THESE IN PRODUCTION
SECRET_KEY=your-super-secure-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings - SET TO YOUR PRODUCTION DOMAINS
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# App Settings
APP_NAME=User Management API
DEBUG=false

# Security Settings
SECURITY_RATE_LIMIT_ENABLED=true
SECURITY_RATE_LIMIT_STORAGE=redis://localhost:6379
SECURITY_AUTH_RATE_LIMIT=3/minute
SECURITY_API_RATE_LIMIT=100/minute

SECURITY_CSRF_ENABLED=true
SECURITY_CSRF_COOKIE_SECURE=true
SECURITY_SESSION_COOKIE_SECURE=true

SECURITY_CORS_ALLOW_ORIGINS=["https://yourdomain.com"]
SECURITY_MAX_LOGIN_ATTEMPTS=3
SECURITY_ACCOUNT_LOCKOUT_DURATION=1800

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here
